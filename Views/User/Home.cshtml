@{
}
@model User
@using Microsoft.AspNetCore.Http
<html>
<head>
	<title>Ayo user</title>
	<style>
    body {
      text-align: center;
    }
    .container {
      margin-top: 150px;
    }
    h1 {
      font-size: 36px;
      margin-bottom: 30px;
    }
    .btn {
      display: inline-block;
      padding: 20px 40px;
      font-size: 24px;
      text-decoration: none;
      background-color: #007bff;
      color: #fff;
      border-radius: 5px;
      transition: background-color 0.3s;
    }
    .btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
<div class="container">
        <p>Welcome @Context.Session.GetString("UserName") </p>
	<a asp-controller="User" asp-action="UploadFileView" class="btn">Upload file/text</a>
	<a asp-controller="User" asp-action="ManageFiles" class="btn">View your files</a>
</div>
</body>
</html>