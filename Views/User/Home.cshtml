@{
}
@model User
@using Microsoft.AspNetCore.Http
<html>
<head>
	<title>User home</title>

	<style>
    body {
        text-align: center;
		font-family: "Roboto", sans-serif;
        background: #D8C4B6; /* fallback for old browsers */
        background: rgb(216, 196, 182);
    }
    .container {
		margin-top: 150px;
    }
    h1 {
		font-size: 50px;
		color: #4F709C;
    }

    .btn-containter {
        display: flex;
        justify-content: space-around;
        gap: 50px;
    }
    .btn {
		display: inline-block;
		padding: 20px 40px;
		font-size: 24px;
		text-decoration: none;
		background-color: #4F709C;
		color: #F5EFE7;
		border-radius: 5px;
		transition: background-color 0.3s;
    }
    .btn:hover {
        background-color: #213555;
    }
  </style>
</head>
	<body>
		<div class="container">
		<h1>Welcome @Context.Session.GetString("UserName") !! </h1>
			<div class="btn-container">
				<a asp-controller="User" asp-action="UploadFileView" class="btn">Upload file/text</a>
				<a asp-controller="User" asp-action="ManageFiles" class="btn">View your files</a>
			</div>
		</div>
	</body>
</html>