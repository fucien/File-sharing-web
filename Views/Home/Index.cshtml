@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
	<title>Welcome to My Landing Page</title>

	<style>
    body {
		text-align: center;
		font-family: "Roboto", sans-serif;
		background: #D8C4B6; /* fallback for old browsers */
		background: rgb(216, 196, 182);
    }
    .container {
		margin-top: 150px;
    }
    h1 {
		font-size: 50px;
		color: #4F709C;
	}
    .btn-containter {
		display: flex;
		justify-content: center;
		gap: 50px;
	}
    .btn {
		display: inline-block;
		padding: 20px 40px;
		font-size: 24px;
		text-decoration: none;
		background-color: #4F709C;
		color: #F5EFE7;
		border-radius: 5px;
		transition: background-color 0.3s;
    }
    .btn:hover {
                background-color: #213555;
    }
  </style>
</head>
<body>
<div class="container">
	<h1>Welcome!!</h1>
		<div class="btn-containter">
			<a asp-controller="Home" asp-action="Login" class="btn">Log In</a>
			<a asp-controller="Home" asp-action="Register" class="btn">Sign Up</a>
		</div>
</div>
</body>
</html>
