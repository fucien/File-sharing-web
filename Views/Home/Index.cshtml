@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
	<title>Welcome to My Landing Page</title>
	<style>
    body {
      text-align: center;
    }
    .container {
      margin-top: 150px;
    }
    h1 {
      font-size: 36px;
      margin-bottom: 30px;
    }
    .btn {
      display: inline-block;
      padding: 20px 40px;
      font-size: 24px;
      text-decoration: none;
      background-color: #007bff;
      color: #fff;
      border-radius: 5px;
      transition: background-color 0.3s;
    }
    .btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
<div class="container">
	<h1>Welcome!!</h1>
        <a asp-controller="Home" asp-action="Login" class="btn">Log In</a>
        <a asp-controller="Home" asp-action="Register" class="btn">Sign Up</a>
</div>
</body>
</html>
